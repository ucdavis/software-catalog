{
  "name": "Next.js Dev Container",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspaces/software-catalog",
  
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "version": "latest",
      "enableNonRootDocker": "true"
    }
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.vscode-typescript-next",
        "bradlc.vscode-tailwindcss",
        "ms-vscode.vscode-json",
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint",
        "formulahendry.auto-rename-tag",
        "steoates.autoimport-es6-ts",
        "ecmel.vscode-html-css",
        "ms-vscode.vscode-css-peek",
        "streetsidesoftware.code-spell-checker",
        "christian-kohler.path-intellisense",
        "christian-kohler.npm-intellisense",
        "mhutchie.git-graph",
        "eamodio.gitlens",
        "redhat.vscode-yaml",
        "ms-vscode.vscode-markdown",
        "yzhang.markdown-all-in-one",
        "ms-vscode.vscode-jest",
        "orta.vscode-jest",
        "ms-azuretools.vscode-docker",
        "humao.rest-client",
        "ms-vscode.remote-containers",
        "cweijan.vscode-postgresql-client2",
        "pkief.material-icon-theme"
      ],
      
      "settings": {
        "typescript.preferences.importModuleSpecifier": "relative",
        "typescript.suggest.autoImports": true,
        "typescript.updateImportsOnFileMove.enabled": "always",
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "explicit",
          "source.organizeImports": "explicit"
        },
        "emmet.includeLanguages": {
          "javascript": "javascriptreact",
          "typescript": "typescriptreact"
        },
        "emmet.triggerExpansionOnTab": true,
        "files.associations": {
          "*.css": "tailwindcss"
        },
        "tailwindCSS.includeLanguages": {
          "typescript": "typescript",
          "typescriptreact": "typescriptreact"
        },
        "tailwindCSS.experimental.classRegex": [
          ["cva\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
          ["cx\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"]
        ]
      }
    }
  },

  "forwardPorts": [3000, 3001, 5000, 5432, 5555, 8080],
  "portsAttributes": {
    "3000": {
      "label": "Next.js Dev Server",
      "onAutoForward": "notify"
    },
    "3001": {
      "label": "Next.js Preview",
      "onAutoForward": "ignore"
    },
    "5000": {
      "label": "Development Server",
      "onAutoForward": "ignore"
    },
    "5432": {
      "label": "PostgreSQL Database",
      "onAutoForward": "ignore"
    },
    "5555": {
      "label": "Prisma Studio",
      "onAutoForward": "ignore"
    },
    "8080": {
      "label": "Alternative Web Server",
      "onAutoForward": "ignore"
    }
  },

	"postCreateCommand": "npm install",
  
  "remoteUser": "nextjs",
  
  "containerEnv": {
    "NODE_ENV": "development",
    "NEXT_TELEMETRY_DISABLED": "1",
    "DATABASE_URL": "postgresql://postgres:postgres@db:5432/software_catalog_dev"
  },
  
  "shutdownAction": "stopContainer"
}
